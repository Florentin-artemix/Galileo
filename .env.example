# ==========================================
# FRONTEND - React Application
# ==========================================
VITE_API_URL=http://localhost:8080/api

# ==========================================
# FIREBASE - Authentication (Frontend)
# ==========================================
# Configuration Firebase pour le frontend React
# Obtenir ces valeurs depuis la console Firebase : https://console.firebase.google.com
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# ==========================================
# FIREBASE - Authentication (Backend)
# ==========================================
# Placer le fichier firebase-credentials.json dans backend/galileo-gateway/config/
# Télécharger depuis : Console Firebase > Project Settings > Service Accounts > Generate new private key
GOOGLE_APPLICATION_CREDENTIALS=config/firebase-credentials.json
FIREBASE_PROJECT_ID=your-project-id

# ==========================================
# CLOUDFLARE R2 - Storage
# ==========================================
CLOUDFLARE_R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
CLOUDFLARE_R2_ACCESS_KEY=your_access_key_here
CLOUDFLARE_R2_SECRET_KEY=your_secret_key_here
CLOUDFLARE_R2_BUCKET_NAME=galileo-publications
CLOUDFLARE_R2_REGION=auto

# ==========================================
# SENDGRID - Email Notifications
# ==========================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@galileo.com
ADMIN_EMAIL=admin@galileo.com

# ==========================================
# DATABASE - PostgreSQL
# ==========================================
POSTGRES_USER=galileo_user
POSTGRES_PASSWORD=galileo_pass_2025
DB_LECTURE_NAME=db_galileo_lecture
DB_ECRITURE_NAME=db_galileo_ecriture

# ==========================================
# ELASTICSEARCH
# ==========================================
ELASTICSEARCH_URIS=http://localhost:9200
ELASTICSEARCH_CONNECTION_TIMEOUT=5s
ELASTICSEARCH_SOCKET_TIMEOUT=30s

# ==========================================
# SPRING PROFILES
# ==========================================
SPRING_PROFILES_ACTIVE=docker

# ==========================================
# SERVICE URLS (Docker)
# ==========================================
LECTURE_SERVICE_URL=http://service-lecture:8081
ECRITURE_SERVICE_URL=http://service-ecriture:8082
FEIGN_CLIENT_LECTURE_URL=http://service-lecture:8081
